/* Modern Dark Theme */
QWidget {
    background-color: #232629;
    color: #f3f6fb;
    font-family: 'Segoe UI', Arial, sans-serif;
    font-size: 15px;
}
QTextEdit, QLineEdit {
    background-color: #2c2f34;
    border: 1px solid #444;
    border-radius: 6px;
    color: #f3f6fb;
    padding: 6px;
}
QPushButton {
    background-color: #3b7ddd;
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 8px 18px;
    font-weight: bold;
}
QPushButton:hover {
    background-color: #5596f6;
}
QTabWidget::pane {
    border: 1px solid #444;
    border-radius: 8px;
    margin: 8px;
}
QTabBar::tab {
    background: #232629;
    color: #f3f6fb;
    border: 1px solid #444;
    border-radius: 6px 6px 0 0;
    padding: 10px 20px;
    margin-right: 2px;
}
QTabBar::tab:selected {
    background: #3b7ddd;
    color: #fff;
}
QLabel {
    font-size: 15px;
}
QScrollBar:vertical {
    background: #232629;
    width: 12px;
    margin: 18px 0 18px 0;
    border-radius: 6px;
}
QScrollBar::handle:vertical {
    background: #444;
    min-height: 20px;
    border-radius: 6px;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: none;
    background: none;
}
